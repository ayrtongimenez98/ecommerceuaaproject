@model IEnumerable<UAAEcommerce.Areas.Admin.Models.Ciudad>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de ciudades</h2>

<p>
    @Html.ActionLink("Agregar nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ciu_descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ciu_descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idCiudad }) |
            @Html.ActionLink("Ver detalles", "Details", new { id=item.idCiudad }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.idCiudad })
        </td>
    </tr>
}

</table>
